# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                pooler
version             1.86
categories          science
platforms           darwin
license             Apache-2
maintainers         ssb22
description         Optimise combinations of primers
long_description    PrimerPooler optimises combinations of primers to minimise the formation of dimers in multiplexed PCR.
homepage            http://ssb22.user.srcf.net/pooler/
fetch.type          git
git.url             https://github.com/ssb22/PrimerPooler.git
use_configure       no
build {
    exec make -C ${worksrcpath}/pooler 2>/dev/null >/dev/null
}
destroot {
    xinstall -m 755 ${worksrcpath}/pooler/pooler ${destroot}${prefix}/bin/
    xinstall -m 644 ${worksrcpath}/pooler/pooler.1 ${destroot}${prefix}/share/man/man1/
}
